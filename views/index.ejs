<%- include("partials/header.ejs") %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />

    <title>ToDoList</title>
  </head>
  <body>
    <% let d = new Date(); %> <% let day = d.getDate(); %> <% let m =
    ["January", "February", "March", "April", "May", "June", "July", "August",
    "September", "October", "November", "December"]; %> <% let month =
    m[d.getMonth()]; %> <% let year = d.getFullYear(); %> <% let newdate = day +
    "th " + month + ", " + year; %>

    <div class="head">
      <div id="head">To Do List</div>
    </div>
    <div class="header">
      <h1><%= newdate %></h1>
    </div>
    <div class="container">
      <form action="/submit" method="POST">
        <input
          type="text"
          placeholder="New Item"
          name="Item"
          class="input-area"
          required
        />
        <input type="submit" class="btn" value="Add" />
      </form>
    </div>
    <div class="container-3">
      <% Item.forEach(item => { %>
      <div class="container-2">
        <input type="checkbox" class="checkBox" name="check" required />
        <%= item %>
      </div>
      <% }) %>
    </div>
  </body>
</html>
